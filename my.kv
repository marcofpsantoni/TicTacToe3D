<MyPopup>:
    GridLayout:
        cols:1

        Label:
            id: result
            text:""

        Label:
            text:"Vuoi giocare ancora?"

        Button:
            text:"Yes"
            on_release:
                root.reset()
        Button:
            text:"No"
            on_release:
                root.exit()


<MyButton>:
    font_size:30
    color: 0.5, 0.6, 0.3, 1
    height: 25
    size_hint_y: None
    width: 25
    size_hint_x: None

<GridLayout>:
	size_hint: 0.8, 0.9
	pos_hint: {"x": 0.2}

